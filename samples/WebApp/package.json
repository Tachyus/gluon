{
    "name": "webapp",
    "version": "1.0.0",
    "description": "Gluon sample web application",
    "main": "Scripts/app.js",
    "scripts": {
        "clean-webapp": "rimraf ./Scripts/*.js* && rimraf ./bin && mkdir bin",
        "clean": "yarn run clean-webapp",
        "dotnet-build": "dotnet build ../SampleApp",
        "postdotnet-build": "cpx ../SampleApp/bin/Debug/net461/*.* ./bin",
        "generate-client": "dotnet ../../src/Gluon.Client/bin/netcoreapp2.0/Gluon.CLI.dll --out Scripts/Generated.ts --reflect ./bin/SampleApp.dll --reference ./bin/SampleLib.dll",
        "postinstall": "yarn run dotnet-build && yarn run generate-client",
        "compile": "node_modules/.bin/tsc -p ./",
        "build": "webpack --config webpack.config.js -d",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tachyus/gluon.git"
    },
    "author": "",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/Tachyus/gluon/issues"
    },
    "homepage": "https://github.com/Tachyus/gluon#readme",
    "dependencies": {
        "gluon-client": "file:../../src/Gluon.Client"
    },
    "devDependencies": {
        "cpx": "^1.5.0",
        "rimraf": "^2.5.2",
        "source-map-loader": "^0.2.1",
        "ts-loader": "^2.0.3",
        "typescript": "^2.5.2",
        "webpack": "^2.4.1"
    }
}
