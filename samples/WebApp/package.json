{
    "name": "webapp",
    "version": "1.0.0",
    "description": "Gluon sample web application",
    "main": "Scripts/app.js",
    "scripts": {
        "clean-webapp": "rimraf ./Scripts/*.js* && rimraf ./bin && mkdir bin",
        "clean": "yarn run clean-webapp",
        "build-webapp": "C:/Windows/Microsoft.NET/Framework/v4.0.30319/MSBuild.exe WebApp.csproj /p:Configuration=Release",
        "generate-client": "../../src/Gluon.CLI/bin/Release/Gluon.CLI.exe --out Scripts/Generated.ts --reflect ../SampleApp/bin/Debug/SampleApp.dll",
        "copy-jquery": "cpx node_modules/jquery/dist/jquery.min.js Scripts",
        "copy-gluon": "cpx ../../src/Gluon.Client/dist/Gluon.* Scripts",
        "prebuild": "yarn run copy-jquery && yarn run copy-gluon && yarn run generate-client",
        "compile": "node_modules/.bin/tsc -p ./",
        "build": "yarn run compile",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tachyus/gluon.git"
    },
    "author": "",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/Tachyus/gluon/issues"
    },
    "homepage": "https://github.com/Tachyus/gluon#readme",
    "dependencies": {
        "@types/jquery": "^2.0.34",
        "jquery": "^3.1.1"
    },
    "devDependencies": {
        "cpx": "^1.5.0",
        "rimraf": "^2.5.2",
        "typescript": "^2.2.2"
    }
}
