<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <GluonDist>$(MSBuildThisFileDirectory)../../src/Gluon.Client/dist</GluonDist>
  </PropertyGroup>
  <ItemGroup>
    <JavaScriptFiles Include="$(GluonDist)/Gluon.js" />
    <JavaScriptFiles Include="../SampleSPA/bin/SampleSPA/App.js" />
    <JavaScriptFiles Include="../SampleSPA/bin/SampleApp/bin/Generated.js" />
    <JavaScriptFiles Include="../../packages/jQuery/Content/Scripts/jquery-2.1.4.js" />
  </ItemGroup>
  <Target Name="CopyGluonFiles" BeforeTargets="Build">
    <Copy SourceFiles="@(JavaScriptFiles)"
          DestinationFolder="Scripts"
          SkipUnchangedFiles="true" />
  </Target>
</Project>
